    "paths": {
        "/api/v1/register": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Register a user",
                "operationId": "10c7fa1975a9aebc465f6bf296c19b84",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "first_name",
                                    "last_name",
                                    "email",
                                    "phone",
                                    "role",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "country_uuid": {
                                        "type": "string",
                                        "example": "valid country uuid"
                                    },
                                    "first_name": {
                                        "type": "string",
                                        "example": "John"
                                    },
                                    "last_name": {
                                        "type": "string",
                                        "example": "Doe"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "johndoe@example.com"
                                    },
                                    "phone": {
                                        "type": "string",
                                        "example": "123-456-7890"
                                    },
                                    "role": {
                                        "type": "string",
                                        "example": "admin || contractor || employee"
                                    },
                                    "avatar": {
                                        "type": "string",
                                        "example": "users/avatars/1.png"
                                    },
                                    "dob": {
                                        "type": "string",
                                        "example": "1999-01-01"
                                    },
                                    "gender": {
                                        "type": "string",
                                        "example": "male"
                                    },
                                    "address": {
                                        "type": "string",
                                        "example": "Some Address"
                                    },
                                    "post_code": {
                                        "type": "string",
                                        "example": "BDCG2102"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password123"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User Registered Successfully"
                    },
                    "401": {
                        "description": "Data Incomplete or Invalid"
                    },
                    "422": {
                        "description": "Validation Error"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
